{% extends "baseweb.html.twig" %}
{% block body %}
    <link href="{{ asset('public/Boostrap/css/app.css') }}" rel="stylesheet">
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <body id="page5">
        {% include 'menucliente.html.twig' %}
        <div class="container">
            <div class="row" style="margin-top:20px;">
                <div class="col-md-12">
                    <div class="panel panel-success">
                        <div class="panel-heading">Implementacion</div>
                        <div class="panel-body">
                            <table id="lista" class="tamaÃ±o table-responsive table table-striped table-condensed table-hover table-bordered">
                                <thead>
                                    <tr class="primary">
                                        <th class="active">Id</th>
                                        <th class="active">Nombre</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for arImplementacion in arImplementacion %}
                                        <tr>
                                            <td>{{ arImplementacion.codigoImplementacionConceptoPk }}</td>
                                            <td>{{ arImplementacion.nombre }}</td>
                                        </tr>
                                    {% endfor%}
                                </tbody>
                            </table>
                            <div class="text-danger">{{ mensaje }}</div>
                            <div class="btn-toolbar">            
                                <div class="btn-group" style="float: left;padding-top: 20px;">
                                    <div class="btn btn-default btn-sm">Registros
                                        {% if arImplementacion != null %}
                                            <span class="badge">{{ arImplementacion.getTotalItemCount }}
                                            </span>
                                        {% else %}
                                            <span class="badge">
                                                0
                                            </span>
                                        {% endif %}
                                    </div>                        
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-1">
                    <a class="btn btn-default btn-sm" href="{{ path('logout') }}">Salir</a>
                </div>
                <div class="row">
                    <div class="col-lg-12"></div>
                </div><br><br><br>
            </div>
        </div>
        <style type="text/css">
            .label,.glyphicon { margin-right:5px; }
        </style>
    </body>
{% endblock %}

