{% extends "baseweb.html.twig" %}
{% block body %}
    <link href="{{ asset('public/Boostrap/css/app.css') }}" rel="stylesheet">
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <body id="page5">
        <div class="container">
            <div class="row" style="margin-top:50px;">
                <div class="col-md-12">
                    <div class="panel panel-success">
                        <div class="panel-heading">Crear mejora</div>
                        <section class="content">        	
                            {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
                            <div class="panel-body">
                                <div class="form-group">
                                    <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12 control-label"><strong>Tipo Novedad:</strong></div>
                                    <div class="col-lg-10 col-md-10 col-sm-4 col-xs-12">
                                        {{ form_widget(form.tipoNovedadRel,{'attr':{'class':'form-control','required':'required'}}) }}
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12 control-label"><strong>Modulo:</strong></div>
                                    <div class="col-lg-10 col-md-10 col-sm-4 col-xs-12">
                                        {{ form_widget(form.moduloRel,{'attr':{'class':'form-control','required':'required'}}) }}
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12 control-label"><strong>Fecha:</strong></div>
                                    <div class="col-lg-10 col-md-10 col-sm-4 col-xs-12">
                                        {{ form_widget(form.fecha) }}
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12 control-label"><strong>Comentario:</strong></div>
                                    <div class="col-lg-10 col-md-10 col-sm-4 col-xs-12">
                                        {{ form_widget(form.comentario,{'attr':{'class':'form-control','required':'required'}}) }}
                                    </div>
                                </div>
                            </div>
                        </section>
                    </div>
                    <div class="text-danger">{{ form_errors(form)}}</div>
                    <div class="modal-footer">
                        <a href="{{path('novedad_lista')}}" class="btn btn-default">Cancelar</a>
                        {{form_widget(form.guardar,{'attr':{'class':'btn btn-success'}}) }}
                    </div>
                    {{ form_end(form)}}
                    </section>
                </div>
            </div>
        </div>
</body>
{% endblock %}

