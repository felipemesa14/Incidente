{% extends "base.html.twig" %}
{% block body %}
    <div class="container">
        <div class="row" style="margin-top:20px;">
            <div class="col-md-12">
                <div class="panel panel-primary">
                    <div class="panel-heading">Crear mejora</div>
                    <section class="content">        	
                        {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
                        <div class="panel-body">
                            <div class="form-group">
                                <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12 control-label"><strong>Tipo Novedad:</strong></div>
                                <div class="col-lg-10 col-md-10 col-sm-4 col-xs-12">
                                    {{ form_widget(form.tipoNovedadRel,{'attr':{'class':'form-control input-sm','required':'required'}}) }}
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12 control-label"><strong>Modulo:</strong></div>
                                <div class="col-lg-10 col-md-10 col-sm-4 col-xs-12">
                                    {{ form_widget(form.moduloRel,{'attr':{'class':'form-control input-sm','required':'required'}}) }}
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12 control-label"><strong>Fecha:</strong></div>
                                <div class="col-lg-10 col-md-10 col-sm-4 col-xs-12">
                                    {{ form_widget(form.fecha) }}
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12 control-label"><strong>Comentario:</strong></div>
                                <div class="col-lg-10 col-md-10 col-sm-4 col-xs-12">
                                    {{ form_widget(form.comentario,{'attr':{'class':'form-control input-sm','required':'required'}}) }}
                                </div>
                            </div>
                        </div>
                    </section>
                    <div class="text-danger">{{ form_errors(form)}}</div>
                    <div class="modal-footer">
                        <a href="{{path('novedad_lista')}}" class="btn btn-default btn-sm">Cancelar</a>
                        {{form_widget(form.guardar,{'attr':{'class':'btn btn-primary btn-sm'}}) }}
                    </div>
                </div>
                {{ form_end(form)}}
                </section>
            </div>
        </div>
    </div>
</body>
{% endblock %}

