{% extends "base.html.twig" %}
{% block body %}
    <div class="container">
        <div class="row" style="margin-top:20px;">
            <div class="col-md-12">
                <div class="panel panel-primary">
                    <div class="panel-heading">Crear tarea</div>
                    <section class="content">        	
                        {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
                        <div class="panel-body">
                            <div class="form-group">
                                <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12 control-label"><strong>Tipo Tarea:</strong></div>
                                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                                    {{ form_widget(form.tipoTareaRel,{'attr':{'class':'form-control input-sm','required':'required'}}) }}
                                </div>
                                <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12 control-label"><strong>Prioridad:</strong></div>
                                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                                    {{ form_widget(form.prioridadRel,{'attr':{'class':'form-control input-sm','required':'required'}}) }}
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12 control-label"><strong>Usuario asignar:</strong></div>
                                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                                    {{ form_widget(form.usuarioAsignadoRel,{'attr':{'class':'form-control input-sm','required':'required'}}) }}
                                </div>
                                <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12 control-label"><strong>Porcentaje tarea:</strong></div>
                                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                                    {{ form_widget(form.porcentaje,{'attr':{'class':'form-control input-sm','required':'required','placeholder':'porcentaje','value':0}}) }}
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12 control-label"><strong>Fecha inicio:</strong></div>
                                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                                    {{ form_widget(form.fechaInicio,{'attr':{'class':'form-control input-sm'}}) }}
                                </div>
                                <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12 control-label"><strong>Fecha final:</strong></div>
                                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                                    {{ form_widget(form.fechaFinal,{'attr':{'class':'form-control input-sm'}}) }}
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12 control-label"><strong>Finalizado:</strong></div>
                                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                                    {{ form_widget(form.finalizado,{'attr':{'class':'form-control input-sm'}}) }}
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label"><strong>Descripci&oacute;n:</strong></label>
                                <div class="col-sm-10">
                                    {{ form_widget(form.descripcion,{'attr':{'class':'form-control input-sm','rows':'10','placeholder':'Descripcion de la tarea'}}) }}
                                </div>
                            </div>
                        </div>
                        <div class="text-danger">{{ form_errors(form)}}</div>
                        <div class="modal-footer">
                            <a href="{{path('tarea_lista')}}" class="btn btn-default btn-sm">Cancelar</a>
                            {{form_widget(form.guardar,{'attr':{'class':'btn btn-primary btn-sm'}}) }}
                        </div>
                        {{ form_end(form)}}
                    </section>
                </div>
            </div>
        </div>
    </div>
</body>
{% endblock %}

