{% extends "base.html.twig" %}
{% block body %}
    <div class="container">
        <div class="row" style="margin-top:20px;">
            <div class="col-md-12">
                <div class="panel panel-primary">
                    <div class="panel-heading">Editar incidencia</div>
                    <section class="content">        	
                        {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
                        <div class="panel-body">
                            <div class="form-group">
                                <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12 control-label"><strong>Asunto:</strong></div>
                                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                                    {{ form_widget(form.titulo,{'attr':{'class':'form-control input-sm input-sm','placeholder':'Titulo del caso'} })}}
                                </div>
                                <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12 control-label"><strong>Prioridad:</strong></div>
                                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                                    {{ form_widget(form.prioridadRel,{'attr':{'class':'form-control input-sm input-sm','required':'required'} }) }}
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12 control-label"><strong>Categoria:</strong></div>
                                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                                    {{ form_widget(form.categoriaRel,{'attr':{'class':'form-control input-sm input-sm','required':'required'} }) }}
                                </div>
                                <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12 control-label"><strong>Asignar a:</strong></div>
                                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                                    {{ form_widget(form.usuarioAsignado,{'attr':{'class':'form-control input-sm input-sm'} }) }}
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12 control-label"><strong>Atendido:</strong></div>
                                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                                    {{ form_widget(form.estadoAtendido,{'attr':{'class':'form-control input-sm'} }) }}
                                </div>
                                <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12 control-label"><strong>Solucionado:</strong></div>
                                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                                    {{ form_widget(form.estadoSolucionado,{'attr':{'class':'form-control input-sm'} }) }}
                                </div>
                            </div>
                                <div class="form-group">
                                <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12 control-label"><strong>Modulo:</strong></div>
                                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                                    {{ form_widget(form.temaRel,{'attr':{'class':'form-control input-sm'} }) }}
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label"><strong>Descripci&oacute;n:</strong></label>
                                <div class="col-sm-10">
                                    {{ form_widget(form.descripcion,{'attr':{'class':'form-control input-sm'} }) }}
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label"><strong>Descripci&oacute;n desarrollo:</strong></label>
                                <div class="col-sm-10">
                                    {{ form_widget(form.descripcionDesarrollo,{'attr':{'class':'form-control input-sm','placeholder':'Descripcion para el area de desarrollo'} }) }}
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12 control-label"><strong>Solucion:</strong></div>
                                <div class="col-lg-10 col-md-10 col-sm-10 col-xs-12">
                                    {{ form_widget(form.solucion,{'attr':{'class':'form-control input-sm'} }) }}
                                </div>
                            </div>
                        </div>
                        <div class="text-danger">{{ form_errors(form)}}</div>
                        <div class="modal-footer">
                            {% if arIncidencia.estadoSolucionado == 1 %}
                                <a href="{{path('caso_admin_lista_solucionados')}}" class="btn btn-default btn-sm">Cancelar</a>
                            {% endif %}
                            
                            {% if arIncidencia.estadoSolucionado == 0 %}
                                <a href="{{path('caso_admin_lista_pendientes')}}" class="btn btn-default btn-sm">Cancelar</a>
                            {% endif %}
                            {{ form_widget(form.guardarTarea, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
                            {{form_widget(form.guardar,{'attr':{'class':'btn btn-primary btn-sm'} }) }}
                        </div>
                        {{ form_end(form)}}
                    </section>
                </div>
            </div>
        </div>
    </div>
</body>
{% endblock %}



