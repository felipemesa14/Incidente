{% extends "base.html.twig" %}
{% block body %}
        <div class="container">
            <div class="row" style="margin-top:20px;">
                <div class="col-md-12">
                    <div class="panel panel-primary">
                        <div class="panel-heading">Crear incidencia</div>
                        <section class="content">        	
                            {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
                            <div class="panel-body">
                                <div class="form-group">
                                    <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12 control-label"><strong>Asunto:</strong></div>
                                    <div class="col-lg-10 col-md-10 col-sm-10 col-xs-12">
                                        {{ form_widget(form.titulo,{'attr':{'class':'form-control','placeholder':'Titulo del caso'}})}}
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12 control-label"><strong>Categoria:</strong></div>
                                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                                        {{ form_widget(form.categoriaRel,{'attr':{'class':'form-control','required':'required'}}) }}
                                    </div>
                                    <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12 control-label"><strong>Prioridad:</strong></div>
                                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                                        {{ form_widget(form.prioridadRel,{'attr':{'class':'form-control','required':'required'}}) }}
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12 control-label"><strong>Nombre Completo:</strong></div>
                                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                                        {{ form_widget(form.nombreCompleto,{'attr':{'class':'form-control','required':'required','placeholder':'Nombre usuario reporta'}}) }}
                                    </div>
                                    <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12 control-label"><strong>Correo:</strong></div>
                                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                                        {{ form_widget(form.email,{'attr':{'class':'form-control','required':'required','placeholder':'Correo Electronico'}}) }}
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12 control-label"><strong>Departamento:</strong></div>
                                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                                        {{ form_widget(form.areaRel,{'attr':{'class':'form-control','required':'required'}}) }}
                                    </div>
                                    <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12 control-label"><strong>Cargo:</strong></div>
                                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                                        {{ form_widget(form.cargoRel,{'attr':{'class':'form-control','required':'required'}}) }}
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12 control-label"><strong>Telefono / Ext:</strong></div>
                                    <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12">
                                        {{ form_widget(form.telefono,{'attr':{'class':'form-control','required':'required','placeholder':'Telefono'}}) }}
                                    </div>
                                    <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12">
                                        {{ form_widget(form.extension,{'attr':{'class':'form-control','required':'required','placeholder':'Extension'}}) }}
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label"><strong>Descripci&oacute;n:</strong></label>
                                    <div class="col-sm-10">
                                        {{ form_widget(form.descripcion,{'attr':{'class':'form-control','placeholder':'Descripcion del problema a reportar'}}) }}
                                    </div>
                                </div>
                            </div>
                            <div class="text-danger">{{ form_errors(form)}}</div>
                            <div class="modal-footer">
                                <a href="{{path('caso_admin_lista')}}" class="btn btn-default btn-sm">Cancelar</a>
                                {{form_widget(form.guardar,{'attr':{'class':'btn btn-primary btn-sm'}}) }}
                            </div>
                            {{ form_end(form)}}
                        </section>
                    </div>
                </div>
            </div>
        </div>
    </body>
{% endblock %}

