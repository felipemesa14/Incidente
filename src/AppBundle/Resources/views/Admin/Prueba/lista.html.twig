{% extends "base.html.twig" %}
{% block body %}
    <div class="container">
        <div class="row" style="margin-top:20px;">
            <div class="col-lg-12 col-sm-12 col-md-12 col-xs-12">
                <div class="panel panel-primary">
                    <div class="panel-heading">Pruebas pendientes</div>
                    <div class="panel-body">
                        <div class="table-responsive">
                            <table id="lista" class="tamaÃ±o table table-striped table-condensed table-hover table-bordered">
                                <thead>
                                    <tr class="primary">
                                        <th class="active">COD</th>
                                        <th class="active">COD INCIDENCIA</th>
                                        <th class="active">COD TAREA</th>
                                        <th class="active">DESCRIPCION</th>
                                        <th class="active">SOLUCION</th>
                                        <th class="active">USUARIO</th>
                                        <th class="active">FECHA</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for arPrueba in arPrueba %}
                                        <tr>
                                            <td>{{ arPrueba.codigoPruebaPk }}</td>
                                            <td>{{ arPrueba.codigoIncidenciaFk }}</td>
                                            <td>{{ arPrueba.codigoTareaFk }}</td>
                                            <td>{{ arPrueba.descripcion}}</td>
                                            <td>{{ arPrueba.solucion}}</td>
                                            <td>{{ arPrueba.usuarioAsignadoRel.username}}</td>
                                            <td>{{ arPrueba.fecha|date('d/m/Y') }}</td>
                                            <td>
                                                <a href="{{ path('prueba_detalle',{'codigoPrueba':arPrueba.codigoPruebaPk}) }}">
                                                    <img src="{{ asset('imagenes/bootstrap/glyphicons_152_new_window.png') }}" width=20 height=20 title="Detalle">
                                                </a>
                                            </td>
                                        </tr>
                                    {% endfor%}
                                </tbody>
                            </table>
                        </div>
                        <div class="btn-toolbar">            
                            <div class="btn-group" style="float: left;padding-top: 20px;">
                                <div class="btn btn-default btn-sm">Registros <span class="badge">{{ arPrueba.getTotalItemCount }}</span></div>                        
                            </div>
                            <div class="btn-group btn-sm" style="float: left;margin-left: 0px;padding-top: 0px;">
                                {{ knp_pagination_render(arPrueba) }}       
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
{% endblock %}

