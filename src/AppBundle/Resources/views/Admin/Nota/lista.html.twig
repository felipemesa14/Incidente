{% extends "base.html.twig" %}
{% block body %}
    <div class="container">
        <div class="row" style="margin-top:20px;">
            <div class="col-lg-12 col-sm-12 col-md-12 col-xs-12">
                <div class="panel panel-primary">
                    <div class="panel-heading">Lista notas</div>
                    <div class="panel-body">
                        {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
                        {{ form_errors(form) }}
                        <div class="form-group">
                            <div class="col-lg-3">
                                <label>Nota</label>
                                {{ form_widget(form.descripcion,{'attr':{'class':'form-control','rows':'2','required':'required'}}) }}
                                <div class="modal-footer">  
                                    {{ form_widget(form.guardar,{'attr':{'class':'btn btn-success btn-sm'}}) }}
                                </div>

                            </div>
                            {% for arNota in arNota %}
                                <div class="col-lg-3">
                                    <label>Nota</label>&nbsp;&nbsp; <input type="checkbox" name="ChkSeleccionar[]" value="{{ arNota.codigoNotaPk }}" /><br>
                                    <textarea class="form-control" rows="5" readonly>{{ arNota.descripcion}}</textarea>
                                </div>
                            {% endfor %}
                        </div>
                        <div class="modal-footer">                            
                            <div class="btn-group">
                                {{ form_widget(form.eliminar,{'attr':{'class':'btn btn-danger btn-sm'}}) }}
                            </div>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>

    </div>
</body>
{% endblock %}

